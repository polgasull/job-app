<section class="section main-section">

  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">

      <h2 class="title is-2"> <%= current_user.is_company? ? t('edit_password') : t('my_profile') %> </h2>
      <% if current_user.is_admin? %>
        <h3 class="title is-4"> Admin Account </h3>
      <% end %>

      <% if current_user.is_candidate? %>
        <%= render 'candidate_form' %>
      <% end %>
        
      <% unless current_user.is_candidate? %>
        <%= render 'form' %>
      <% end %>
    </div>
  </div>
</section>

<%= content_for :footer do %>

  <%= javascript_include_tag "helpers/image_loader.js" %>

<% end %>
