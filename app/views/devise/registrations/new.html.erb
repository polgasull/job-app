<div class="section main-section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <h2 class="title"> 
					<span> <%= t('company_section_title') %> </span> 
					<span class="has-text-success"> <%= t('free').upcase %> </span> <br>
          <span> <%= t('company_section_subtitle') %>
        </h2>
        <p> Encuenta al mejor talento digital en una sola plataforma </p>
        <div class="mt3">
          <p> <%= icon('fas', 'check') %> Notificaci√≥n a tiempo real </p>
          <p> <%= icon('fas', 'check') %> Descarga y ordena tus candidatos </p>
          <p> <%= icon('fas', 'check') %> Haz crecer tu empresa </p>
        </div>
        <div class="mt4 has-text-centered">
          <img 
            src="<%=asset_path('publicidad-digital.svg')%>"
            width="180"
            height="180"
            alt="Digital Pros para todos | Wearehiring.io"
            data-aos="fade-up" 
            data-aos-duration="1500">
        </div>
      </div>
      <div class="column is-1"></div>
      <div class="column is-4">
        <h2 class="title"> <%= t('sign_up_as_company') %> </h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <%= f.hidden_field :user_type_id, value: UserType.where(internal_name: 'company').first.id %>

          <div class="field mb5">
            <div class="control">
              <%= f.input :name, 
                  required: true, 
                  autofocus: true, 
                  input_html: { class:"input" }, 
                  wrapper: false, 
                  label_html: { class: "label" }, 
                  label: t('forms.company_name') %>
            </div>
          </div>
          <div class="field mb2">
            <div class="control">
              <%= f.input :email,
                  required: true,
                  input_html: { class:"input" },
                  wrapper: false,
                  label_html: { class:"label" },
                  label: t('forms.email') %>
            </div>
          </div>
          <div class="field mb2">
            <div class="control">
              <%= f.input :password,
                  required: true,
                  input_html: { class:"input" },
                  wrapper: false,
                  label_html: { class:"label" },
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  label: t('forms.password')  %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                  required: true,
                  input_html: { class: "input" },
                  wrapper: false,
                  label_html: { class: "label" },
                  label: t('forms.password_confirmation')  %>
            </div>
          </div>
          <div class="field mt3">
            <div class="control has-text-centered">
              <%= f.button :submit,
                  t('create_company_account'),
                  class:"button is-primary is-medium is-rounded" %>
            </div>
          </div>
        <% end %>

        <div class="field mt4">
          <div class="control has-text-centered">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
    <div class="columns">
      <div class="column">
        <section class="section has-text-centered">
          <div class="container">
            <div class="columns">
              <div class="column is-three-fifths is-offset-one-fifth">
                <h2 class="title"> Colaboramos con </h2>
              </div>
            </div>
          </div>
        </section>
        <section class="section">
          <div class="container">
            <%= render 'partners', animation: false %>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>

<%= content_for :head do %>
	<%= render "seo", 
			title: t('seo.company_new'), 
			description: t('seo.company_new_description'),
			image: asset_path('logo_black.png') %>
<% end %>

<%= content_for :footer do %>

	<script>
	  AOS.init();
	</script>

<% end %>