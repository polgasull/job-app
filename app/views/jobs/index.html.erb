<section class="section mt5">
  <div class="columns border-top bg-light">
    <div class="column is-2">
      <div class="pl3 pr1 mt2">
        <%= render 'panel' %>
      </div>
    </div>

    <div class="column is-9 pl6">

      <div class="columns">
        <div class="column mt4">
          <%= render partial: 'search' %>
        </div>
      </div>
   
      <div class="columns">
        <div class="column mt2">
          <span><b> <%= @job_count %> <%= t('published_jobs') %> </b></span>
        </div>
      </div>
      
      <%= render @jobs %>

      <div class="columns">
        <div class="column is-4 is-offset-8">
          <%= paginate @jobs %>
        </div>
      </div>

    </div>
  </div>
</section>


