<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "JobPosting",
  "title" : "<%= job.title %>",
  "description": "<%= job.description %>",
  "identifier": {
    "@type": "PropertyValue",
    "name": "We Are Hiring",
    "value": "1234567"
  },
  "datePosted" : "<%= job.created_at %>",
  "validThrough" : "<%= job.expiry_date %>",
  "employmentType": "FULL_TIME",
  <% if job.remote_ok? %>
  "applicantLocationRequirements": {
    "@type": "Country",
    "name": "ESP"
  },
  "jobLocationType": "TELECOMMUTE",
  <% else %>
  "jobLocation": {
    "@type": "Place",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "<%= job.location %>",
      "addressCountry": "ES"
    }
  },
  <% end %>
  "baseSalary": {
    "@type": "MonetaryAmount",
    "currency": "EUR",
    "value": {
      "@type": "QuantitativeValue",
      "minValue": <%= (job.salary_from && job.salary_from != 0) ? job.salary_from : "" %>,
      "maxValue": <%= (job.salary_to && job.salary_to != 0) ? job.salary_to : "" %>,
      "unitText": "MONTH"
    }
  },
  "hiringOrganization" : {
    "@type" : "Organization",
    "name" : "<%= job.job_author %>",
    "logo" : "<%= job.avatar_url(:thumb) %>"
  }
}
</script>