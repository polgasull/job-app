<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://google.com/article"
  },
  "headline": "<%= job.title %> en <%= job.location %>",
  "image": {
    "@type": "ImageObject",
    <% if !job.avatar.file.nil? %>
    "url": "<%= image_tag(job.avatar_url(:thumb), alt: job.job_author) %>",
    "height": 250,
    "width": 250
    <% end %>
  },
  "datePublished": "<%= job.created_at %>",
  "dateModified": "<%= job.updated_at %>",
  "author": {
    "@type": "Person",
    "name": "<%= job.job_author %>"
  },
   "publisher": {   
    "@type": "Organization",
    "name": "We Are Hiring",
    "logo": {
      "@type": "ImageObject",
      "url": "<%=asset_path('logo_black.jpg')%>",
      "width": 250,
      "height": 200
    }
  },
  "description": "<%= job.category.name %>, <%= job.job_type.name %>, <%= job.level.name %>"
}
</script>