<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://google.com/article"
  },
  "headline": "<%= job.title %> en <%= job.job_author %> en <%= job.location %>",
  <% unless job.avatar.file.nil? %>
  "image": {
    "@type": "ImageObject",
    "url": "<%= job.avatar_url(:thumb) %>",
    "height": 250,
    "width": 250
  },
  <% end %>
  "datePublished": "<%= job.created_at %>",
  "dateModified": "<%= job.updated_at %>",
  "author": {
    "@type": "Person",
    "name": "<%= job.job_author %>"
  },
   "publisher": {   
    "@type": "Organization",
    "name": "We Are Hiring",
    "logo": {
      "@type": "ImageObject",
      "url": "https://wearehiring-bucket-prod.s3.eu-west-3.amazonaws.com/uploads/job/avatar/660/thumb_0000_sin.png",
      "width": 250,
      "height": 200
    }
  },
  "description": "Nivel <%= job.level.name %> categor√≠a <%= job.category.name %> con tipo de contrato <%= job.job_type.name %>"
}
</script>