                  <p> <%= icon('fas', 'check has-text-success mr2') %> </p>
                  <p> <%= t('pricing_index.pricing_feature_4') %> </p>
                </div>
                <div class="is-flex">
                  <p> <%= icon('fas', 'check has-text-success mr2') %> </p>
                  <p> <%= t('download_candidates_excel') %> </p>
                </div>
