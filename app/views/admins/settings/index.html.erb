  </div>

  <div class="columns has-text-centered listhead">
    <div class="column"> <%= t("coupons.id") %> </div>
    <div class="column"> <%= t("coupons.name") %> </div>
    <div class="column"> <%= t("coupons.value") %> </div>
    <div class="column"></div>
  </div>
  <%= simple_form_for(Coupon.new, method: :post, url: admins_coupons_path, html: { multipart: true }) do |f| %>
    <div class="columns is-vertical-center listrow">
      <div class="column"></div>
      <div class="column">
        <%= f.input :name, label: false, input_html: { class: "input is-size-7" }, wrapper: false, placeholder: t('coupons.name') %>
      </div>
      <div class="column">
        <%= f.input :value, label: false, input_html: { class: "input is-size-7" }, wrapper: false, placeholder: t('coupons.value') %>
      </div>
      <div class="column">
        <%= f.submit t('create'), class: 'button is-primary is-size-7' %>
      </div>
    </div>
  <% end %>
  <% @coupons.each do |coupon| %>
    <%= render partial: "/admins/settings/coupon", locals: { coupon: coupon } %>
  <% end %>
</div>

