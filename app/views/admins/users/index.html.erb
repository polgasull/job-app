<section class="section pv2">
  <div class="container">
    <div class="columns">
      <div class="column"> 
        <p> Empresas: <%= @companies %> </p>
        <p> Candidatos: <%= @candidates %> </p>
      </div>
      <div class="column has-text-right">
        <%= link_to admins_users_path(format: :csv), class: 'button primary pl3' do %>
          <%= icon('fas', 'file-download pr2') %> <%= t('download_users_csv') %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="section pb5 pt2">
  <div class="container">
    <div class="columns listhead is-mobile">
      <div class="column is-1 is-hidden-touch">
        Nb
      </div>
      <div class="column is-1 is-hidden-touch">
        <%= t('users.image') %>
      </div>
      <div class="column">
        <%= t('users.name') %>
      </div>
      <div class="column">
        <%= t('users.phone') %>
      </div>
      <div class="column is-2-desktop">
        <%= t('users.email') %>
      </div>
      <div class="column is-hidden-mobile">
        <%= t('jobs.position') %>
      </div>
      <div class="column is-hidden-mobile">
        <%= t('users.profile_url') %>
      </div>
      <div class="column is-hidden-mobile">
        <%= t('users.user_type') %>
      </div>
      <div class="column">
        <%= t('inscribed') %>
      </div>
      <div class="column is-1 is-hidden-mobile">
        Guardar
      </div>
    </div>

    <%= render @users %>

    <div class="columns is-centered mt3">
      <div class="column is-half-desktop">
        <%= paginate @users %>
      </div>
    </div>

  </div>
</section>