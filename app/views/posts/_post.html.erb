<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4">
          <%= link_to post.title, post %>
        </p>
      </div>
    </div>
    <div class="content">
      <%= post.description %>
      <%= post.created_at %>
    </div>
    <div class="comment-count">
      <span class="tag is-rounded"> <%= post.comments.count %></span>
    </div>
  </div>
</div>
