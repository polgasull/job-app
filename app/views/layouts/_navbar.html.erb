<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <%= link_to root_path, class:"navbar-item" do %>
      <h1 class="title is-5"><%= Rails.configuration.application_name %></h1>
    <% end  %>

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="mainNavbar">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="mainNavbar" class="navbar-menu">
    <div class="navbar-end">
      <%= link_to 'Post Job', new_job_path, class: "button is-primary ml2 mt3 mb3" %>
      <div class="is-hidden-desktop">
        <% if user_signed_in? %>
          <%= link_to current_user.name, edit_user_registration_path, class: "navbar-item" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "navbar-item" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "navbar-item" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "navbar-item" %>
        <% end %>
      </div>
      <div class="navbar-item is-hidden-touch">
        <div class="buttons">
          <% if user_signed_in? %>
            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link"> Account </a>
              <div class="navbar-dropdown is-right">
                <%= link_to current_user.name, edit_user_registration_path, class: "navbar-item" %>
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "navbar-item" %>
              </div>
            </div>
          <% else %>
            <p class="control">
              <%= link_to "Sign In", new_user_session_path, class: "button mr2 ml4" %>
            </p>
            <p class="control">
              <%= link_to "Sign up", new_user_registration_path, class: "button is-light"%>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

<% content_for :footer do %>
    <script>
      $(document).ready(function() {

        // Check for click events on the navbar burger icon
        $(".navbar-burger").click(function() {

            // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
            $(".navbar-burger").toggleClass("is-active");
            $(".navbar-menu").toggleClass("is-active");

        });
      });
    </script>

<% end %>