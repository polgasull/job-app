<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <% if current_user&.is_admin? %>
          <nav class="level">
            <div class="level-left">
              <p class="level-item">
                <strong>Actions</strong>
              </p>
            </div>
            <div class="level-right">
              <p class="level-item">
                <%= link_to "New", new_blog_post_path, class: "button is-primary" %>
              </p>
            </div>
          </nav>  
          <hr>   
        <% end %>
        <%= render @posts %>
      </div>
      <div class="column is-3">
        <%= render 'sidebar_menu' %>
      </div>
    </div>
  </div>
</section>

<%= content_for :head do %>
  <%= render "seo", 
      title: "El Blog del talento digital", 
      description: "Blog sobre programación web y app, marketing digital, diseño y todo lo que siempre has querido saber sobre el mundo digital", 
      image: asset_path('logo_black.png') %>
<% end %>