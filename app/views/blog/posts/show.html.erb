<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <% if current_user&.is_admin? %>
          <nav class="level">
            <div class="level-left">
              <p class="level-item">
                <strong>Actions</strong>
              </p>
            </div>
            <div class="level-right">
              <p class="level-item">
                <%= link_to "Edit", edit_blog_post_path(@post), class: "button" %>
              </p>
              <p class="level-item">
                <%= link_to "Delete", blog_post_path(@post), class: "button is-danger", method: :delete, data: {confirm: "Are you sure?"}  %>
              </p>
            </div>
          </nav>  
          <hr>   
        <% end %>
        <div class="content">
          <h1> <%= @post.title %> </h1>
          <div class="image crop">
            <% if !@post.image.file.nil? %>
              <%= image_tag(@post.image_url) %>
            <% else %>
              <%= icon('far', 'image', style: 'font-size: 50px') %>
            <% end %>      
          </div>
          <p class="mt4"> <%= simple_format(@post.description) %> </p>
        </div>      
        <section class="section comments">
          <div class="container">
            <h2 class="subtitle is-5"> <strong> <%= @post.comments.count %> </strong> <%= t('comments.plural') %> </h2>
            <%= render @post_comments %>
            <div class="comment-form">
              <hr>
              <h3 class="subtitle is-3"> <%= t('comments.leave_a_comment') %> </h3>
              <%= render '/blog/comments/form' %>
            </div>
          </div>
        </section>
      </div>
      <div class="column is-3">
        <div>
          <p class="title f5"> Compartir </p>
        </div>
        <hr class="mv3">
        <div class="mb3">
          <%= social_share_button_tag("#{@post.title}", :image => asset_path('logo_black.png'), :allow_sites => %w(whatsapp_app twitter linkedin email)) %>
        </div>
        <%= render 'sidebar_menu' %>
      </div>    
    </div>
  </div>
</section>