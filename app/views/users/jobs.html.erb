<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h1 class="f2"> <%= t('my_jobs') %> </h1>
      </div>
    </div>
  <%= form_for jobs_user_path(current_user), method: :get do |f| %>
    <div class="columns is-search is-vertical-center">
      <div class="column">
      <input 
        type="text" 
        class="input" 
        placeholder="<%=t('search')%>" 
        name="search_my_jobs" 
        value="<%=params[:search_my_jobs] ? params[:search_my_jobs] : ''%>">
      </div>
      <div class="column has-text-left">
        <%= f.submit t('search'), class: "button is-dark" %>
      </div>
    </div>
  <% end %>
  </div>
</section>

<section class="section pb5 pt2">
  <div class="container">
    <div class="columns">
      <div class="column mt2">
        <span class="tag is-light"><b> <%= @jobs_count %> <%= t('jobs.total') %> </b></span>
        <span class="tag is-success"><b> <%= @jobs_active_count %> <%= t('jobs.published_jobs') %> </b></span>
        <span class="tag is-danger"><b> <%= @jobs_expired_count %> <%= t('jobs.expired') %> </b></span>
      </div>

      <div class="column has-text-right is-hidden-touch">
        <div class="dropdown is-hoverable">
          <div class="dropdown-trigger">
            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu4">
              <span> <%= params[:sort_by] ? t(params[:sort_by]) : t('sort_by') %> </span>
              <span class="icon is-small">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="columns listhead is-mobile">
      <div class="column is-1 is-hidden-touch">
        Nb
      </div>
      <div class="column is-hidden-touch">
        <%= t('reference') %>
      </div>
      <div class="column is-hidden-mobile">
        <%= t('jobs.company') %>
      </div>
      <div class="column">
        <%= t('jobs.position') %>
      </div>
      <div class="column is-hidden-touch">
        <%= t('jobs.tags') %>
      </div>
      <div class="column">
        <%= t('jobs.candidates') %>
      </div>
      <div class="column">
        DÃ­as restantes
      </div>
    </div>

		<%= render partial: 'job', collection: @jobs, as: :job %>
  </div>
</section>

<%= content_for :head do %>
  <%= render "seo", title: t('seo.my_jobs_title') , description: t('seo.my_jobs_description')%>
<% end %>