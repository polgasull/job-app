<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h1 class="f2"> <%= t('my_jobs') %> </h1>
      </div>
    </div>
  <%= form_for jobs_user_path(current_user), method: :get do |f| %>
    <div class="columns is-search is-vertical-center">
      <div class="column">
      <input 
        type="text" 
        class="input" 
        placeholder="<%=t('search')%>" 
        name="search_my_jobs" 
        value="<%=params[:search_my_jobs] ? params[:search_my_jobs] : ''%>">
      </div>
      <div class="column has-text-left">
        <%= f.submit t('search'), class: "button is-dark" %>
      </div>
    </div>
  <% end %>
  </div>
</section>

<section class="section pb5">
  <div class="container">
    <div class="columns">
      <div class="column mt2">
        <span class="tag is-light"><b> <%= @jobs_count %> <%= t('jobs.total') %> </b></span>
        <span class="tag is-success"><b> <%= @jobs_active_count %> <%= t('jobs.published_jobs') %> </b></span>
        <span class="tag is-danger"><b> <%= @jobs_expired_count %> <%= t('jobs.expired') %> </b></span>
      </div>
    </div>

    <div class="columns listhead is-mobile">
      <div class="column is-1 is-hidden-touch">
        Nb
      </div>
      <div class="column is-hidden-touch">
        <%= t('reference') %>
      </div>
      <div class="column is-hidden-mobile">
        <%= t('jobs.company') %>
      </div>
      <div class="column">
        <%= t('jobs.position') %>
      </div>
      <div class="column is-hidden-touch">
        <%= t('jobs.tags') %>
      </div>
      <div class="column">
        <%= t('jobs.candidates') %>
      </div>
      <div class="column">
        Días restantes
      </div>
    </div>

		<%= render partial: 'job', collection: @jobs, as: :job %>
  </div>
</section>

<% if @jobs.empty? %>
<section class="section">
  <div class="container has-text-centered">
    <div class="columns">
        <div class="column">
          <h1 class="title f2"> No tienes ningún Job activo </h1>
        </div>
      </div>
    </div>
    <div class="columns mt4">
      <div class="column has-text-centered">
        <%= image_tag(asset_path('desert.svg'), width: 350, height: 350) %>
      </div>
    </div>
    <div class="columns mt4">
      <div class="column has-text-centered">
        <%= link_to t('jobs.post_job_free'), new_job_path, class: 'button is-rounded primary is-large shadow' %>
      </div>
    </div>
  </div>
</section>
<% end %>

<%= content_for :head do %>
  <%= render "seo", title: t('seo.my_jobs_title') , description: t('seo.my_jobs_description')%>
<% end %>