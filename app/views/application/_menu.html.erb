<nav class="navbar" role="navigation" aria-label="main navigation">
	<div class="navbar-end">
		<div class="navbar-brand">
			<%= link_to t('show_jobs'), 
					jobs_path, 
					class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(jobs_path)}" %>
		</div>
		<% unless current_user&.is_candidate? %>
			<div class="navbar-brand">
				<%= link_to t(post_job_toggle_title), 
						new_job_path, 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(new_job_path)}" %>
			</div>
		<% end %>
		<% unless user_signed_in? %>
		<div class="navbar-brand">
			<div class="navbar-item">
				<%= link_to t('candidate_access'), 
					candidate_access_path,
					class: "text-uppercase f6 button is-rounded primary" %>
			</div>
		</div>
		<div class="navbar-brand">
			<div class="navbar-item">
				<%= link_to t('company_access'), 
					new_user_session_path, 
					class: "text-uppercase f6 button is-rounded is-primary" %>
			</div>
		</div>
		<% end %>
		<% if current_user&.is_company? %>
			<div class="navbar-brand is-vertical-center has-text-weight-bold ml3 f2">|</div>
			<div class="navbar-brand is-vertical-center">
				<%= link_to t('my_jobs'), 
						jobs_user_path(current_user), 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(jobs_user_path(current_user))}" %>
			</div>
		<% end %>
		<% if current_user&.is_candidate? %>
			<div class="navbar-brand is-vertical-center has-text-weight-bold ml3 f2">|</div>
			<div class="navbar-brand is-vertical-center">
				<%= link_to t('my_inscriptions'), 
						inscriptions_user_path(current_user), 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(inscriptions_user_path(current_user))}" %>
			</div>
		<% end %>
		<% if current_user&.is_admin? %>
			<div class="navbar-brand is-vertical-center has-text-weight-bold ml3 f2">|</div>
			<div class="navbar-brand is-vertical-center">
				<%= link_to "New Job", 
						new_admins_job_path, 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(new_admins_job_path)}" %>
			</div>
			<div class="navbar-brand is-vertical-center">
				<%= link_to "Jobs", 
						admins_jobs_path, 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(admins_jobs_path)}" %>		
			</div>
			<div class="navbar-brand is-vertical-center">
				<%= link_to "Users", 
						admins_users_path, 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(admins_users_path)}" %>		
			</div>
			<div class="navbar-brand is-vertical-center">
				<%= link_to "Settings", 
						admins_settings_path, 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(admins_settings_path)}" %>		
			</div>
			<div class="navbar-brand is-vertical-center">
				<%= link_to "Blog", 
						posts_path, 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(posts_path)}" %>		
			</div>
		<% end %>
		<% if user_signed_in? %>
			<div class="navbar-brand is-vertical-center">
				<%= link_to t('my_profile'), edit_user_registration_path, 
						class: "navbar-item text-uppercase f6 #{ 'active' if current_page?(edit_user_registration_path) }" %> 
			</div>
			<div class="navbar-brand has-text-left">
				<div class="dropdown navbar-item is-right" id="profileDropdown">
					<div class="dropdown-trigger">
						<button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
							<span><%= icon('fas', 'user') %></span>
							<span class="icon is-small">
								<i class="fas fa-angle-down" aria-hidden="true"></i>
							</span>
						</button>
					</div>
					<div class="dropdown-menu" id="dropdown-menu" role="menu">
						<div class="dropdown-content">
							<%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
								<span class="icon is-small"><%= icon('fas', 'sign-out-alt') %></span>
								<span> <%= t('logout') %> </span>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</nav>