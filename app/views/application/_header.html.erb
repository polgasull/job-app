<header class="header">
	<div class="columns">
		<div class="column is-2">
			<a href="<%=root_path%>">
				<img class="logo" src="<%=asset_path('logo_black.png')%>" alt="Ofertas de empleo para equipos tecnológicos – jobHub" width="80" height="80">
			</a>
			<div class="open-menu is-hidden-desktop">
				<span>&#9776;</span>
			</div>
		</div>
		<div class="column is-10 has-text-right is-hidden-touch">
			<%= render "menu" %>
		</div>
	</div>
</header>
<% if current_user && current_user.phone.blank? && current_user.is_candidate? %>
	<div class="has-background-warning">
		<div class="container">
			<div class="columns is-vertical-center pv2 is-marginless">
				<div class="column is-hidden-touch">
					<span class="f6"> Añade tu <strong>teléfono</strong>. 
						Los perfiles de candidato completados tienen un <strong> +86% de probabilidades</strong> de ser contactados 
					</span>
				</div>
				<div class="column is-3 has-text-right">
					<%= link_to edit_user_registration_path, class: "button is-rounded primary f6" do %> 
						<% if browser.device.mobile? || browser.device.tablet? %>
							Completa tu perfil <%= icon('fas', 'arrow-right pl2') %>
						<% else %>
							Quiero que me llamen <%= icon('fas', 'arrow-right pl2') %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>
<div id="mySidenav" class="sidenav">
	<a href="<%=root_path%>" class="mobile-menu-logo">
		<img src="<%=asset_path('logo_black.png')%>" alt="Ofertas de empleo para equipos tecnológicos – jobHub" width="100" height="50">
	</a>
	<div class="close-menu">
		<span><img class="back-menu-logo" src="<%=asset_path('Back.svg')%>" alt="back-menu"></span>
	</div>
	<%= render "menu_touch" %>
</div>