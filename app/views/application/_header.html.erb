<header class="header">
	<div class="container">
		<div class="columns">
			<div class="column is-2">
				<a href="<%=root_path%>">
					<img class="logo" src="<%=asset_path('logo_beta.png')%>" alt="Ofertas de empleo para equipos tecnológicos – jobHub" width="80" height="80">
				</a>
				<div class="open-menu is-hidden-desktop">
					<span>&#9776;</span>
				</div>
			</div>
			<div class="column is-10 has-text-right is-hidden-touch">
				<%= render "menu" %>
			</div>
		</div>
	</div>
</header>
<div id="mySidenav" class="sidenav">
	<a href="<%=root_path%>" class="mobile-menu-logo">
		<img src="<%=asset_path('logo_beta.png')%>" alt="Ofertas de empleo para equipos tecnológicos – jobHub" width="100" height="50">
	</a>
	<div class="close-menu">
		<span><img class="back-menu-logo" src="<%=asset_path('Back.svg')%>" alt="back-menu"></span>
	</div>
	<%= render "menu_touch" %>
</div>