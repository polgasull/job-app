<div class="columns listrow is-mobile">
  <div class="column is-1 is-hidden-touch">
    <%= job_counter + 1 %>
  </div>
  <div class="column is-hidden-touch">
    <%= job.reference %>
  </div>
  <div class="column is-hidden-mobile">
    <%= job.job_author %>
  </div>
  <div class="column">
    <%= link_to job.title, [:companies, job] %>
  </div>
  <div class="column is-hidden-touch">
    <% job.skills.each do |skill| %>
      <span> <%= skill.name %>, </span>
    <% end %>  
  </div>
  <div class="column">
  <%= link_to companies_job_inscriptions_path(job) do %>
    <%= job_inscriptions_counter(job) %>
  <% end %>
  </div>
  <div class="column">
    <strong> <%= job_expired(job) %> </strong> 
  </div>
</div>