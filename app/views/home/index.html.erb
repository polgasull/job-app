					<img 
						src="<%=asset_path('WAH_cohete_1.svg')%>"
						width="400"
						height="400"
						class="is-blank"
						alt="Rápido regístro | Wearehiring.io">
				</div>
				<h3 class="title is-4"> <%=t('feature_2')%> </h3>
				<div class="content mt4">
					<p class="has-text-centered-mobile"> <%=t('feature_2_text')%> </p>
				</div>
			</div>
			<div class="column has-text-centered">
				<div class="home-feature-img-wrapper">
					<img 
						src="<%=asset_path('WAH_barco_1.svg')%>"
						width="300"
						height="300"
						class="is-blank"
						alt="Digital talent place | Wearehiring.io">			
				</div>
				<h3 class="title is-4"> <%=t('feature_3')%> </h3>
